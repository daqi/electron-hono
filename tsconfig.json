{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true
    },
    "include": ["*.ts", "src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"]
}
